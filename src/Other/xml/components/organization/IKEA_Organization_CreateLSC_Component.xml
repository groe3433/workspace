			</p1:Documents>
		</Sequence>
		<Sequence Number="2">
			<p1:Api Name="getOrganizationHierarchy"></p1:Api>
			<p1:Documents>
				<p1:Document Type="INPUT_DOCUMENT" FileName="IKEA_getOrganization_input.xml"
					Location="resources/xml/input/template/organization/">
				</p1:Document>
			</p1:Documents>
			<p1:Validations>
			<p1:Validate ValidationType="XPATH" Expected="${Organization.OrganizationCode}" Path="/Organization/@OrganizationCode"> </p1:Validate>
			</p1:Validations>
		</Sequence>
	</Steps>
<Parameters/>
</Component> 