	</target>	
	
	<target name="unpack-agent-zip" description="unpack agent zip">		
		<echo>unpack agent zip</echo>
		<delete dir="${zip.location}/${zip.folder}" />
		<unzip src="${zip.location}/${zip.folder}.zip" dest="${zip.location}/${zip.folder}"/>
		<chmod perm="775">
			<fileset dir="${zip.location}/${zip.folder}"/>
		</chmod>
	</target>
	
	<target name="copyCustomerOverrides" description="Copy customer_overrides.properties from Agent Zip Folder">
		<echo>Copy customer_overrides.properties</echo>
		<copy file="${zip.location}/${zip.folder}/${agent.zip.file1}" todir="${agent.zip.file1.LocationToCopy}" />
	</target>	
			
	<target name="copyTOGJar" description="Copy TOG.jar from Agent Zip Folder">
		<echo>Copy TOG.jar</echo>
		<copy file="${zip.location}/${zip.folder}/${agent.zip.file2}" todir="${agent.zip.file2.LocationToCopy}" />
	</target>				
	
