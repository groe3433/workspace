<?xml version="1.0" encoding="UTF-8"?>
<project name = "BuildScripts" default="all-unpack" basedir=".">

	<property file = "unpackTOG.properties" />

	<target name="all-unpack" description="all unpacking targets">
		<echo>Unpacking Agent Zip Contents and Restarting Agents</echo>
		<antcall target = "unpack-agent-zip" />
		<antcall target = "delete-agent-zip" />
		<antcall target = "copyCustomerOverrides" />
		<antcall target = "copyTOGJar" />
		<antcall target = "copyResourcesJar" />
